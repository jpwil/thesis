@article{sundarSafetyPreformulatedAmphotericin2008,
  title        = {Safety of a Pre‐formulated Amphotericin {{B}} Lipid Emulsion for the Treatment of {{Indian Kala}}‐azar},
  author       = {Sundar, S. and Chakravarty, J. and Agarwal, D. and Shah, A. and Agrawal, N. and Rai, M.},
